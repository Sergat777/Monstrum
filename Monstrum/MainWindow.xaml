<Window x:Class="Monstrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monstrum"
        mc:Ignorable="d"
        Title="MONSTRUM" WindowState="Maximized" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Resources/logo.ico">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/startBG.jpg" Opacity="1"/>
    </Window.Background>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="MONSTRUM" FontSize="104" FontWeight="ExtraBold" Foreground="#c00"
                   Margin="25" HorizontalAlignment="Center" TextDecorations="Underline"/>
        
        <Frame x:Name="mainAppFrame" Grid.Row="1"/>

    </Grid>

</Window>
