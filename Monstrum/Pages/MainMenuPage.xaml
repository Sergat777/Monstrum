<Page x:Class="Monstrum.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Monstrum.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <StackPanel>
        <Border x:Name="btPlay" Style="{StaticResource roundButton}" MouseDown="btPlay_MouseDown" Width="400">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Resources/creator2.png" Margin="10" Height="50"/>
                <TextBlock Text="PLAY" Style="{StaticResource txtButton}"/>
                <Image Source="/Resources/creator3.png" Margin="10" Height="50"/>
            </StackPanel>
        </Border>
        <Border x:Name="btCreator" Style="{StaticResource roundButton}" MouseDown="btCreator_MouseDown" Width="400">
            <TextBlock Text="CREATOR" Style="{StaticResource txtButton}"/>
        </Border>
        <Border x:Name="btClose" Style="{StaticResource roundButton}" MouseDown="btClose_MouseDown" Width="400">
            <TextBlock Text="EXIT" Style="{StaticResource txtButton}"/>
        </Border>
    </StackPanel>
</Page>
