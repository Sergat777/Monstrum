<Page x:Class="Monstrum.Pages.CreatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Monstrum.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatorPage">

    <Border Style="{StaticResource roundButton}" VerticalAlignment="Top">
        <StackPanel>
            <Image x:Name="btReturn" Source="/Resources/left.png" Height="50" HorizontalAlignment="Left" MouseDown="btReturn_Click"/>
            <Image Source="/Resources/creator.png" Margin="10" Height="100"/>
            <TextBlock Text="MONSTRUM" Style="{StaticResource txtButton}"/>
            <TextBlock Text="ПРОГРАММУ РАЗАРБОТАЛ&#10;СТУДЕНТ ГРУППЫ П21" Margin="10"/>
            <TextBlock Text="KONDRATEV SERGEY" Style="{StaticResource txtButton}"/>
        </StackPanel>
    </Border>
</Page>
