<Window x:Class="Monstrum.Windows.RewardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monstrum.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Style="{StaticResource modalWindow}" Width="800">
    <Border Style="{StaticResource roundButton}" Background="{StaticResource paleYellow}"
            HorizontalAlignment="Stretch" Margin="0">

        <DockPanel Margin="20">
            <TextBlock Text="НОВЫЙ ПРЕДМЕТ" Style="{StaticResource txtButton}" DockPanel.Dock="Top"/>
            <Image x:Name="imgNewItem" DockPanel.Dock="Left" Margin="5" Width="250"/>
            <Border x:Name="btOk" Style="{StaticResource roundButton}" DockPanel.Dock="Bottom" MouseDown="btOk_MouseDown">
                <TextBlock Text="ОК" Style="{StaticResource txtButton}"/>
            </Border>
            <TextBlock Text="НОВИНКА УЖЕ В ИНВЕНТАРЕ!" VerticalAlignment="Center" Style="{StaticResource txtButton}" FontWeight="Bold"/>

        </DockPanel>

    </Border>
</Window>
